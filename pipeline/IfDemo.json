{
	"name": "IfDemo",
	"properties": {
		"activities": [
			{
				"name": "MyIfCondition",
				"type": "IfCondition",
				"typeProperties": {
					"expression": {
						"value": "@bool(pipeline().parameters.routeSelection)",
						"type": "Expression"
					},
					"ifFalseActivities": [
						{
							"name": "CopyFromBlobToBlob2",
							"type": "Copy",
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"typeProperties": {
								"source": {
									"type": "BlobSource",
									"recursive": true
								},
								"sink": {
									"type": "BlobSink"
								},
								"enableStaging": false
							}
						}
					],
					"ifTrueActivities": [
						{
							"name": "CopyFromBlobToBlob1",
							"type": "Copy",
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"typeProperties": {
								"source": {
									"type": "BlobSource",
									"recursive": true
								},
								"sink": {
									"type": "BlobSink"
								},
								"enableStaging": false
							}
						}
					]
				}
			}
		],
		"parameters": {
			"inputPath": {
				"type": "String"
			},
			"outputPath1": {
				"type": "String"
			},
			"outputPath2": {
				"type": "String"
			},
			"routeSelection": {
				"type": "String"
			}
		}
	}
}